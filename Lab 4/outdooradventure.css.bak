/* Nav Bar styles */
      
      nav
      {
        background-color: #ECF7FE;
        border: 2px solid blue;
        margin: 10px auto;
        min-width: 500px;
        padding: 10px 0px;
        position: sticky;
        text-align: center;
        top: 50px;
        width: 80%;
      }
      
      /* The unordered list is the Flex container */
      
      nav ul
      {
        display: flex;
        flex-flow: row nowrap;
        justify-content: space-evenly;
      }
      
      /* The unordered list items are the flex items */
      
      nav li 
      {
        flex: 0 0 auto;
      }
      
      nav a 
      {
        background-color: blue;
        border: 1px solid blue;
        border-radius: 25px;
        color: white;
        display: block;
        max-width: 300px;
        padding: 10px 40px;
      }